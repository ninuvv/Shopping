
{{!-- d-flex justify-content-center align-items-center flex-column py-5 --}}
<div class="container mt-5">
    <div class="row">
         {{#each products}}
        <div class=" col-md-3 ">
           
            <div class="card" style="width: 15rem;">
                <img src="/product_images/{{this._id}}.jpg" style="width:200px ;height:250px" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">Rs.{{this.price}}</p>
                    <p class="card-text">{{this.desc}}</p>
                    {{!-- <a href="/add_to_cart/{{this._id}}" class="btn btn-primary">Add to cart</a> --}}
                    <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</button>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>