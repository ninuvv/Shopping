<section>
    <div class="container">

        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliverydetails.address}}</td>
                    <td>{{this.deliverydetails.pincode}}</td>
                    <td>{{this.deliverdDetails.mob}}</td>
                    <td>{{this.totalAmt}}</td>
                     <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        <a href="/view_order_product/{{this._id}}" class="btn btn-primary">View Product</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</section>