<section>
    <div class="container">
<div class="row mt-5">
    <a href="/admin/add_product" class="btn btn-success ml-auto"> Add product</a>
</div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Decscription</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{$index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.cate}}</td>
                    <td>{{this.desc}}</td>
                    <td><img style="width:50px;height:50px" src="/product_images/{{this._id}}.jpg" alt=""></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</section>